    id: String;
    name: Name;
    gender: Male | Female;
    occupation: Occupation;

    /// Returns a hello message.
    public SayHello(): String {
        "{this.name} says Hello!"
    }

    public isMale(): Boolean {
        this.gender._type == 1
    }

    public isFemale(): Boolean {
        this.gender._type == 2
    }
