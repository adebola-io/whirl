{
   "comments": {
      "lineComment": "//",
      "docComment": "///",
      "blockComment": ["/*", "*/"]
   },
   "onEnterRules": [
      {
         "beforeText": "^\\s*///\\s*",
         "action": { "indent": "none", "appendText": "///" }
      }
   ],
   "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
   ],
   "autoClosingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["/*", " */"],
      ["\"", "\""],
      ["'", "'"]
   ],
   "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["'", "'"]
   ]
}
