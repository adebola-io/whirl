{
   "name": "vscode-whirl",
   "displayName": "Whirl",
   "description": "Support for the Whirl Programming Language",
   "publisher": "adebola-io",
   "author": {
      "name": "Adebola Akomolafe",
      "email": "adebolaakomolafe@gmail.com"
   },
   "icon": "./icons/whirl-color.svg",
   "version": "0.0.1",
   "engines": {
      "vscode": "^1.54.0"
   },
   "categories": [
      "Programming Languages",
      "Snippets",
      "Linters",
      "Formatters",
      "Other"
   ],
   "contributes": {
      "languages": [
         {
            "id": "wrl",
            "aliases": [
               "Whirl",
               "wrl"
            ],
            "extensions": [
               ".wrl"
            ],
            "configuration": "./syntaxes/whirl.json"
         }
      ],
      "configuration": {
         "type": "object",
         "title": "Whirl",
         "properties": {
            "pbls.maxNumberOfProblems": {
               "scope": "resource",
               "type": "number",
               "default": 100,
               "description": "Controls the maximum number of problems produced by the server."
            }
         }
      },
      "grammars": [
         {
            "language": "wrl",
            "scopeName": "source.wrl",
            "path": "./syntaxes/whirl.tmlLanguage.json"
         }
      ],
      "snippets": [
         {
            "language": "wrl",
            "path": "./snippets/whirl.code-snippets"
         }
      ]
   },
   "devDependencies": {
      "@types/node": "^16.11.7",
      "@types/vscode": "^1.32.0",
      "@typescript-eslint/eslint-plugin": "^5.30.0",
      "@typescript-eslint/parser": "^5.30.0",
      "eslint": "^8.13.0",
      "typescript": "^4.7.2"
   },
   "dependencies": {
      "vscode-languageclient": "^8.0.2",
      "vscode-languageserver": "^8.0.2",
      "vscode-languageserver-textdocument": "^1.0.5"
   }
}
