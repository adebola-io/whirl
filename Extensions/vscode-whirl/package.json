{
   "name": "vscode-whirl",
   "displayName": "Whirl",
   "description": "Support for the Whirl Programming Language",
   "publisher": "adebola-io",
   "author": {
      "name": "Adebola Akomolafe",
      "email": "adebolaakomolafe@gmail.com"
   },
   "icon": "./icons/whirl-color.svg",
   "version": "0.0.1",
   "engines": {
      "vscode": "^1.54.0"
   },
   "categories": [
      "Programming Languages",
      "Snippets",
      "Linters",
      "Formatters",
      "Other"
   ],
   "main": "./src/extension.js",
   "contributes": {
      "languages": [
         {
            "id": "wrl",
            "aliases": [
               "Whirl",
               "wrl"
            ],
            "extensions": [
               ".wrl"
            ],
            "configuration": "./syntaxes/whirl.json"
         }
      ],
      "configuration": {
         "type": "object",
         "title": "Whirl",
         "properties": {
            "pbls.maxNumberOfProblems": {
               "scope": "resource",
               "type": "number",
               "default": 100,
               "description": "Controls the maximum number of problems produced by the server."
            }
         }
      },
      "grammars": [
         {
            "language": "wrl",
            "scopeName": "source.wrl",
            "path": "./syntaxes/whirl.tmlLanguage.json"
         }
      ],
      "snippets": [
         {
            "language": "wrl",
            "path": "./snippets/whirl.code-snippets"
         }
      ]
   },
   "dependencies": {
      "dotenv": "^16.3.1",
      "vscode": "^1.1.37",
      "vscode-languageclient": "^8.0.2",
      "vscode-languageserver": "^8.1.0"
   },
   "devDependencies": {
      "@types/node": "^20.5.7"
   }
}
