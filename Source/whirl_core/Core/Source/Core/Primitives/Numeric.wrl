module Numeric;


/// An unsigned 8-bit Int.
public model UInt8 {} // TODO
/// An Int value with a magnitude sign.
public model SignedInt {} // TODO
/// A union data type to represent different unsigned Int values.
public type UnsignedInt = UInt8 | UInt16 | UInt32 | UInt64;
/// A union data type to represent different Int values.
public type Int = UnsignedInt | SignedInt;
/// An arbitrarily large Int value.
public model BigInt {} // TODO
/// A union data type to represent a number.
public type Number = Int | Float; // | BigInt;
public const MAX_SAFE_Int: Int = Invocation.MAX_SAFE_Int;
