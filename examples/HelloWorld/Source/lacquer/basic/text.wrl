module text;

use core.collections.HashMap;
use super.view.{View, ViewPreset, Viewable};

public model Text implements Viewable {
    var value: String;
    var styles: HashMap<String, String>;
    new(value: String) {
        this.value = value;
    }
    public function fontWeight(fontWeight: Number) -> This {
        this.styles.set("font-weight", fontWeight.toStr())
        return this;
    }
    public function fontFamily(fontFamily: String) -> This {
        this.styles.set("font-family", fontFamily);
        return this;
    }
    public function [Viewable.toView]() -> View {
        return View(some(ViewPreset.Text)).setInnerText(this.value);
    }
}
