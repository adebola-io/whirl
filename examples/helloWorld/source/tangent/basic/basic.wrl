module basic;

public use button.Button;
public use text.Text;


public function text(value: String) -> View {
    View(some(ViewPreset.Text)).setInnerText(this.value)
}


/// Returns a generic button view.
public function button(text?: View, icon?: View) -> View {
    horizontalView(some(ViewPreset.Button))
        .style(
            style()
                .size(250, 200)
                .corners(15)
                .stroke(StrokeType.Solid, 3)
                .textColor("white")
                .backgroundColor("deepblue")
        )
        .maybeAppend(this.text)
        .maybeAppend(this.icon)
}


/// Returns a generic image component.
public function image(src?: String, alt?: String) -> View {
    View(some(ViewPreset.Image))
}

