/// An owned iterator built from the elements of an array.
/// ## Usage
public model ArrayIter<T> implements Iteratable<T> {
    var array: Array<T>;
    var idx: UnsignedInt;
    new(array: Array<T>) {
        this.array = array;
        this.idx = 0;
    }

    public function [Iteratable.Next](): Maybe<T> {
        length := this.array.Length();
        if length == this.idx {
            return None();
        } else {
            nextItem := this.array[this.idx];
            this.idx += 1;
            return nextItem;
        }
    }
}

